<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F0F0"
    tools:context=".activity.LoginActivity">
    <LinearLayout
        android:id="@+id/mylin"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#40C4FF"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/ic_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_130"
            android:textColor="#F4F4F4"/>
        <TextView
            android:id="@+id/regin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="#F4F4F4"
            android:layout_marginLeft="@dimen/dp_100"/>
    </LinearLayout>
        <TextView
            android:id="@+id/rightwhite"
            app:layout_constraintTop_toBottomOf="@id/mylin"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/rightwhite"/>
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            app:layout_constraintLeft_toLeftOf="@id/rightwhite"
            app:layout_constraintRight_toRightOf="@id/rightwhite"
            app:layout_constraintTop_toTopOf="@id/rightwhite"
            app:layout_constraintBottom_toBottomOf="@id/rightwhite"
            android:background="@drawable/icon_user_name"/>
    <EditText
        android:id="@+id/myphonenumber"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toBottomOf="@id/mylin"
        app:layout_constraintLeft_toRightOf="@id/rightwhite"
        android:layout_marginTop="@dimen/dp_30"
        android:hint="请输入手机号码"
        android:background="@drawable/leftwhite"/>
    <TextView
        android:id="@+id/righttop"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_60"
        android:background="@drawable/righttopwhite"
        app:layout_constraintTop_toBottomOf="@id/rightwhite"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_30"/>
    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/icon_pwd"
        app:layout_constraintTop_toTopOf="@id/righttop"
        app:layout_constraintBottom_toBottomOf="@id/righttop"
        app:layout_constraintRight_toRightOf="@id/righttop"
        app:layout_constraintLeft_toLeftOf="@id/righttop"/>

    <EditText
        android:id="@+id/mypwd"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_60"
        android:background="@drawable/lefttopwhite"
        app:layout_constraintTop_toBottomOf="@id/rightwhite"
        app:layout_constraintLeft_toRightOf="@id/righttop"
        android:hint="请输入密码"/>
    <Button
        android:id="@+id/mylogin"
        android:layout_width="@dimen/dp_330"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toBottomOf="@id/mypwd"
        android:layout_marginTop="@dimen/dp_20"
        android:text="登录"
        android:textSize="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/myregist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        app:layout_constraintRight_toRightOf="@id/mylogin"
        app:layout_constraintTop_toBottomOf="@id/mylogin"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="#40C4FF"/>
</androidx.constraintlayout.widget.ConstraintLayout>