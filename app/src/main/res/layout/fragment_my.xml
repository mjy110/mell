<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:background="#FAF6F6"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".ui.my.MyFragment"
  >
    <ImageView
        android:id="@+id/topimage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:background="@drawable/bg_me_header"/>
    <ImageView
        android:id="@+id/touxiang"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        app:layout_constraintTop_toTopOf="@id/topimage"
        app:layout_constraintBottom_toBottomOf="@id/topimage"
        android:layout_marginLeft="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/touxiang"/>
    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="@dimen/dp_20"
        android:text="登录/注册"
        app:layout_constraintLeft_toRightOf="@id/touxiang"
        app:layout_constraintTop_toTopOf="@id/topimage"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/topimage"/>
        <LinearLayout
            android:id="@+id/mylin"
            android:background="#fff"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/topimage"
            android:layout_height="@dimen/dp_70">
            <LinearLayout
                android:id="@+id/fukuan"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/yellow"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_height="wrap_content"
                    android:text="待付款"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/shoukuan"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/blue"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_height="wrap_content"
                    android:text="待收货"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/wancheng"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/green"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="已完成"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dingdan"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@drawable/lan"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="我的订单"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/xian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            app:layout_constraintTop_toBottomOf="@id/mylin"
            android:background="#C1BFBF"/>
    <TextView
        android:id="@+id/xian2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@id/xian"
        android:layout_marginTop="@dimen/dp_20"
        android:background="#C1BFBF"/>
        <LinearLayout
            android:id="@+id/shouhuoguanli"
            app:layout_constraintTop_toBottomOf="@id/xian2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#fff"
            android:layout_height="@dimen/dp_40">
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/laba"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="收货管理"/>
            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_270"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/icon_arrow"/>
        </LinearLayout>
    <TextView
        android:id="@+id/xian3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@id/shouhuoguanli"
        android:background="#C1BFBF"/>
    <LinearLayout
        android:id="@+id/fenxiang"
        app:layout_constraintTop_toBottomOf="@id/xian3"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/zhuanfa"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="分享"/>
        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/icon_arrow"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_298"/>
    </LinearLayout>
    <TextView
        android:id="@+id/xian4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#C1BFBF"
        app:layout_constraintTop_toBottomOf="@id/fenxiang"
        />
    <LinearLayout
        android:id="@+id/shezhi"
        android:layout_width="match_parent"
        android:background="#fff"
        app:layout_constraintTop_toBottomOf="@id/xian4"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/shezhi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="设置"/>
        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/icon_arrow"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_298"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#C1BFBF"
        app:layout_constraintTop_toBottomOf="@id/shezhi"/>
</androidx.constraintlayout.widget.ConstraintLayout>