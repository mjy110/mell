<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F6F0F0"
    tools:context=".activity.LoginActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/mylin"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#40C4FF"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="@dimen/dp_50">
            <ImageView
                android:id="@+id/registback"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@drawable/ic_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textSize="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_130"
                android:textColor="#F4F4F4"/>
        </LinearLayout>
        <TextView
            android:id="@+id/rightwhite"
            app:layout_constraintTop_toBottomOf="@id/mylin"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/rightwhite"/>
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            app:layout_constraintLeft_toLeftOf="@id/rightwhite"
            app:layout_constraintRight_toRightOf="@id/rightwhite"
            app:layout_constraintTop_toTopOf="@id/rightwhite"
            app:layout_constraintBottom_toBottomOf="@id/rightwhite"
            android:background="@drawable/icon_phone"/>
        <EditText
            android:id="@+id/registphonenumber"
            android:layout_width="@dimen/dp_185"
            android:layout_height="@dimen/dp_60"
            app:layout_constraintTop_toBottomOf="@id/mylin"
            app:layout_constraintLeft_toRightOf="@id/rightwhite"
            android:layout_marginTop="@dimen/dp_30"
            android:hint="请输入手机号码"
            android:background="@drawable/rightleft"/>
        <TextView
            android:id="@+id/registcode"
            android:layout_width="@dimen/dp_115"
            android:layout_height="@dimen/dp_60"
            android:textColor="#40C4FF"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="@id/registphonenumber"
            app:layout_constraintLeft_toRightOf="@id/registphonenumber"
            android:paddingTop="@dimen/dp_20"
            android:background="@drawable/leftwhite"
            android:textSize="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:text="|获取验证码"/>
        <TextView
            android:id="@+id/righttop"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/righttopwhite"
            app:layout_constraintTop_toBottomOf="@id/rightwhite"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_30"/>
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/icon_verify_code"
            app:layout_constraintTop_toTopOf="@id/righttop"
            app:layout_constraintBottom_toBottomOf="@id/righttop"
            app:layout_constraintRight_toRightOf="@id/righttop"
            app:layout_constraintLeft_toLeftOf="@id/righttop"/>

        <EditText
            android:id="@+id/registercode"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/lefttopwhite"
            app:layout_constraintTop_toBottomOf="@id/rightwhite"
            app:layout_constraintLeft_toRightOf="@id/righttop"
            android:hint="请输入短信验证码"/>
        <TextView
            android:id="@+id/rightop1"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_60"
            app:layout_constraintTop_toBottomOf="@id/righttop"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="@drawable/righttopwhite"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/icon_pwd"
            app:layout_constraintLeft_toLeftOf="@id/rightop1"
            app:layout_constraintRight_toRightOf="@id/rightop1"
            app:layout_constraintTop_toTopOf="@id/rightop1"
            app:layout_constraintBottom_toBottomOf="@id/rightop1"/>
        <EditText
            android:id="@+id/registpwd"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_60"
            app:layout_constraintTop_toBottomOf="@id/righttop"
            android:background="@drawable/lefttopwhite"
            android:hint="请输入密码(6-20位数字或字母)"
            app:layout_constraintLeft_toRightOf="@id/rightop1"/>
        <TextView
            android:id="@+id/righttop2"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/righttopwhite"
            app:layout_constraintTop_toBottomOf="@id/rightop1"
            android:layout_marginLeft="@dimen/dp_30"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/icon_pwd"
            app:layout_constraintBottom_toBottomOf="@id/righttop2"
            app:layout_constraintTop_toTopOf="@id/righttop2"
            app:layout_constraintLeft_toLeftOf="@id/righttop2"
            app:layout_constraintRight_toRightOf="@id/righttop2"/>
        <EditText
            android:id="@+id/registcommitpwd"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_60"
            app:layout_constraintLeft_toRightOf="@id/righttop2"
            app:layout_constraintTop_toBottomOf="@id/rightop1"
            android:background="@drawable/lefttopwhite"
            android:hint="请再次输入密码"
            />
        <Button
            android:id="@+id/registcommit"
            android:layout_width="@dimen/dp_330"
            android:layout_height="@dimen/dp_60"
            app:layout_constraintTop_toBottomOf="@id/registcommitpwd"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_30"
            android:text="注册"
            android:textSize="@dimen/dp_20"
            android:textColor="#fff"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>